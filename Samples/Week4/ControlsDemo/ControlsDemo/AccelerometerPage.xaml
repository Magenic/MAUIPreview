<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.AccelerometerPage"
             Title="Accelerometer">
    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <Label Text="{Binding AccelerometerDetected, Mode=OneTime}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
            <Label Text="{Binding X}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
            <Label Text="{Binding Y}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
            <Label Text="{Binding Z}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
        </StackLayout>
    </ScrollView>
</ContentPage>
