<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.MediaPage"
             Title="Media">
    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <Button Text="Pick Image" Clicked="OnPickImageClicked" />
            <Label Text="{Binding SelectedImageLocation}" WidthRequest="300" TextColor="Black" />
            <Button Text="Take Picture" Clicked="OnTakePictureClicked" />
            <Label Text="{Binding CapturedPictureLocation}" WidthRequest="300" TextColor="Black" />
        </StackLayout>
    </ScrollView>
</ContentPage>
