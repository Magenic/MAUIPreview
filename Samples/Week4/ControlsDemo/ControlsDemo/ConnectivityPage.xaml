<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.ConnectivityPage"
             Title="Connectivity">
    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <Label Text="{Binding NetworkStatus}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
            <ListView ItemsSource="{Binding Connections}" HorizontalOptions="Fill" VerticalOptions="FillAndExpand">
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>
