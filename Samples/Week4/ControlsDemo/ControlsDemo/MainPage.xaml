<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <Button Text="Accelerometer" Clicked="OnAccelerometerClicked" />
            <Button Text="Barometer" Clicked="OnBarometerClicked" />
            <Button Text="Battery" Clicked="OnBatteryClicked" />
            <Button Text="Clipboard" Clicked="OnClipboardClicked" />
            <Button Text="Compass" Clicked="OnCompassClicked" />
            <Button Text="Connectivity" Clicked="OnConnectivityClicked" />
            <Button Text="Contacts" Clicked="OnContactsClicked" />
            <Button Text="Media" Clicked="OnMediaClicked" />
            <Button Text="Secure Storage" Clicked="OnSecureStorageClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
