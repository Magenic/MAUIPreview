<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.SecureStoragePage"
             Title="Secure Storage">
    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <Label Text="{Binding SecureStorageText}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
            <Entry Text="{Binding SecureStorageText, Mode=TwoWay}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
        </StackLayout>
    </ScrollView>
</ContentPage>
