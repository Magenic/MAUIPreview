<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.ClipboardPage"
             Title="Clipboard">
    <ScrollView Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout>
            <Label Text="{Binding ClipboardText}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
            <Entry Text="{Binding ClipboardText, Mode=TwoWay}" TextColor="Black" WidthRequest="300" HorizontalOptions="Start" />
        </StackLayout>
    </ScrollView>
</ContentPage>
